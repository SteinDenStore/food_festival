---
// Henter parametrene fra Astro.props
const {
  htmlheading = "h2",
  size = "medium",
  stylingclasses = "",
} = Astro.props;
const Htmlheading = htmlheading;

const sizeClasses = {
  h1: "text-[40px] lg:text-5xl font-heading",
  h2: "text-[32px] lg:text-[38px] font-heading",
  h3: "text-xl lg:text-[32px] font-heading",
  h4: "text-base lg:text-[28px] font-heading",
};
---

<Htmlheading class:list={[sizeClasses[size], stylingclasses]}
  ><slot /></Htmlheading
>
